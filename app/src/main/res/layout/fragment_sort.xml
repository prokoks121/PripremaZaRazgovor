<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SortFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sortSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Sortiranje"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sortBoja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boja"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sortSort"
        app:layout_constraintEnd_toStartOf="@+id/sortGeneracija"
        />
    <TextView
        android:id="@+id/sortGeneracija"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/sortBoja"
        app:layout_constraintTop_toBottomOf="@+id/sortSort"
        app:layout_constraintEnd_toStartOf="@+id/sortSnaga"
        android:text="Generacija"/>
    <TextView
        android:id="@+id/sortSnaga"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@+id/sortGeneracija"
        app:layout_constraintTop_toBottomOf="@+id/sortSort"
        android:text="Posecna sanaga"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>